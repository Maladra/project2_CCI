<Window x:Class="Projet2_CCI.Administrateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet2_CCI"
        mc:Ignorable="d"
        Title="Administrateur" Height="450" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="151" x:Name="listeUtilisateurs" ItemsSource="{Binding Login}" SelectionChanged="ListeUtilisateurs_SelectionChanged">
        </ListBox>

        <Button Content="Editer utilisateur" HorizontalAlignment="Left" Margin="254,389,0,0" VerticalAlignment="Top" Width="97" Click="Button_EditerUtilisateur_Click"/>
        <Button Content="Ajouter utilisateur" HorizontalAlignment="Left" Margin="560,389,0,0" VerticalAlignment="Top" Width="109" Click="Button_AjouterUtilisateur_Click"/>
        <Button Content="Supprimer utilisateur" HorizontalAlignment="Left" Margin="393,389,0,0" VerticalAlignment="Top" Width="125" Click="Button_SupprimerUser_Click"/>


    </Grid>
</Window>
