<UserControl x:Class="Projet2_CCI.Affichage.SelectionLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet2_CCI.Affichage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFE5E5E5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nom Client :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,71,0,0"/>
        <Label Content="Prénom Client :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,121,0,0"/>
        <Label Content="Moyen paiement :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,171,0,0"/>
        <Label Content="Date début :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,222,0,0"/>
        <Label Content="Date fin :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,267,0,0"/>
        <Button Content="Valider" Grid.Column="1" HorizontalAlignment="Left" Margin="250,343,0,0" VerticalAlignment="Top" Width="75" Click="ButtonValider_Click"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="233,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="233,143,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="233,202,0,0" VerticalAlignment="Top" Width="120"/>
        <DataGrid Grid.Column="1"
                  HorizontalAlignment="Left"
                  Height="430"
                  Margin="10,10,0,0"
                  VerticalAlignment="Top"
                  Width="152"               
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding StockTempSnowboard}"
                  x:Name="stockSnowboard">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                <DataGridTextColumn Header="Marque" Binding="{Binding Marque}"/>
                <DataGridTextColumn Header="Style" Binding="{Binding Style}"/>

            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="PreviewMouseDoubleClick" Handler="DataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <DataGrid Grid.Column="1"
                  HorizontalAlignment="Left"
                  Height="430"
                  Margin="635,10,0,0"
                  VerticalAlignment="Top"
                  Width="100"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding LocationListe}"
                  x:Name="listeLocation">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}"/>
                <DataGridTextColumn Header="Reservé" Binding="{Binding Stock}"/>
                
            </DataGrid.Columns>
            
            
             
        </DataGrid>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="250,253,0,0" VerticalAlignment="Top"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="308,313,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
