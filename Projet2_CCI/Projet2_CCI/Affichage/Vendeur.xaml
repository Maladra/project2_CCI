<Window x:Class="Projet2_CCI.Vendeur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet2_CCI"
        mc:Ignorable="d"
        Title="Location" Height="450" Width="800">
    <Grid>

        <Label Content="Welcome" HorizontalAlignment="Left" Margin="359,337,0,0" VerticalAlignment="Top"/>
        <TabControl>
            <TabItem Header="Stock matériel">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="233*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="533*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid HorizontalAlignment="Left" Height="371" Margin="10,10,0,0" VerticalAlignment="Top" Width="227" Grid.ColumnSpan="2" x:Name="stockAffichage" ItemsSource="{Binding Source=snowboardListe}"></DataGrid>
                    <Button Content="Ajouter un snowboard" Grid.Column="2" HorizontalAlignment="Left" Margin="85,254,0,0" VerticalAlignment="Top" Width="177" Click="Button_ajoutSnowboard_Click"/>
                    <Button Content="Ajouter une marque de snowboard" Grid.Column="2" HorizontalAlignment="Left" Margin="85,336,0,0" VerticalAlignment="Top" Width="196" Click="Button_ajoutMarque_Click"/>
                    <Button Content="Ajouter un style de snowboard" Grid.Column="2" HorizontalAlignment="Left" Margin="85,293,0,0" VerticalAlignment="Top" Width="177" Click="Button_ajoutStyle_Click"/>
                </Grid>
            </TabItem>


            <TabItem Header="Nouvelle Location">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="122*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Nom Client :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,71,0,0"/>
                    <Label Content="Prénom Client :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,121,0,0"/>
                    <Label Content="Moyen paiement :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,171,0,0"/>
                    <Label Content="Date début :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,222,0,0"/>
                    <Label Content="Date fin :" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="233,267,0,0"/>
                    <Button Content="Valider" Grid.Column="1" HorizontalAlignment="Left" Margin="250,343,0,0" VerticalAlignment="Top" Width="75" Click="ButtonValider_Click"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="233,102,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="233,143,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="233,194,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>

            <TabItem Header="Location en cours">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
